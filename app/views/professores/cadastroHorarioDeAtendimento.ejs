<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <% include partials/head %>
</head>
<body>
  <header>
    <% include partials/navebar %>
  </header>

   <main>
    <div class="container cadastroAtividade">

     <div class="jumbotron">
       <% if (perfil == 'Professor') { %>   
       <p>Cadastrar Horário de Atendimento:</p>
       <br>
       <form action="/monitoriaOrientada/<%= monitoria %>/horarioAtendimento/cadastrarHorario" method="post" class="form-horizontal">
       <div class="form-group">
        <div class="col-md-12">
        <H4>Segunda-feira</H4>
        <div class="form-group horarios col-md-2">
          <label>Hora 1 de Início:</label>
          <input type="time"  class="form-control" name="horaInicio1Seg">
        </div>
        <div class="form-group horarios col-md-2">
          <label>Hora 1 do Término:</label>
          <input type="time"  class="form-control" name="horaTermino1Seg">
        </div>
        <div class="form-group horarios col-md-2">
            <label>Hora 2 de Início:</label>
            <input type="time"  class="form-control" name="horaInicio2Seg">
          </div>
          <div class="form-group horarios col-md-2">
            <label>Hora 2 do Término:</label>
            <input type="time"  class="form-control" name="horaTermino2Seg">
          </div>
        </div>  
        <div class="col-md-12">
          <H4>Terça-feira</H4>
          <div class="form-group horarios col-md-2">
            <label>Hora 1 de Início:</label>
            <input type="time"  class="form-control" name="horaInicio1Ter">
          </div>
          <div class="form-group horarios col-md-2">
            <label>Hora 1 do Término:</label>
            <input type="time"  class="form-control" name="horaTermino1Ter">
          </div>
          <div class="form-group horarios col-md-2">
              <label>Hora 2 de Início:</label>
              <input type="time"  class="form-control" name="horaInicio2Ter">
            </div>
            <div class="form-group horarios col-md-2">
              <label>Hora 2 do Término:</label>
              <input type="time"  class="form-control" name="horaTermino2Ter">
            </div>
          </div>  
          <div class="col-md-12">
            <H4>Quarta-feira</H4>
            <div class="form-group horarios col-md-2">
              <label>Hora 1 de Início:</label>
              <input type="time"  class="form-control" name="horaInicio1Qua">
            </div>
            <div class="form-group horarios col-md-2">
              <label>Hora 1 do Término:</label>
              <input type="time"  class="form-control" name="horaTermino1Qua">
            </div>
            <div class="form-group horarios col-md-2">
                <label>Hora 2 de Início:</label>
                <input type="time"  class="form-control" name="horaInicio2Qua">
              </div>
              <div class="form-group horarios col-md-2">
                <label>Hora 2 do Término:</label>
                <input type="time"  class="form-control" name="horaTermino2Qua">
              </div>
          </div>   
          <div class="col-md-12"> 
              <H4>Quinta-feira</H4>
              <div class="form-group horarios col-md-2">
                <label>Hora 1 de Início:</label>
                <input type="time"  class="form-control" name="horaInicio1Qui">
              </div>
              <div class="form-group horarios col-md-2">
                <label>Hora 1 do Término:</label>
                <input type="time"  class="form-control" name="horaTermino1Qui">
              </div>
              <div class="form-group horarios col-md-2">
                  <label>Hora 2 de Início:</label>
                  <input type="time"  class="form-control" name="horaInicio2Qui">
                </div>
                <div class="form-group horarios col-md-2">
                  <label>Hora 2 do Término:</label>
                  <input type="time"  class="form-control" name="horaTermino2Qui">
                </div>  
          </div>
          <div class="col-md-12"> 
              <H4>Sexta-feira</H4>
              <div class="form-group horarios col-md-2">
                <label>Hora 1 de Início:</label>
                <input type="time"  class="form-control" name="horaInicio1Sex">
              </div>
              <div class="form-group horarios col-md-2">
                <label>Hora 1 do Término:</label>
                <input type="time"  class="form-control" name="horaTermino1Sex">
              </div>
              <div class="form-group horarios col-md-2">
                  <label>Hora 2 de Início:</label>
                  <input type="time"  class="form-control" name="horaInicio2Sex">
                </div>
                <div class="form-group horarios col-md-2">
                  <label>Hora 2 do Término:</label>
                  <input type="time"  class="form-control" name="horaTermino2Sex">
                </div>  
          </div>          
        <button type="submit" class="btn btn-block btn-primary col-md-8">Cadastrar Horário</button>
       </div>
       </form>
       <% } else { %>
        Usuário não autorizado!
       <% } %>
     </div>  

    </div>
   </main>

  <footer>
  </footer>
</body>
</html>
