<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
  </style>
</head>
<body>
  <header>
    <% include partials/navebar %>
  </header>

   <main>
     <div class="container">

       <div class="jumbotron pesquisa">
        <p>Resultados</p>
        <table>
          <thead>
            <tr>

            <% if (perfil == 'Aluno') { %>
              <th>NOME</th>
              <th>MONITOR</th>
              <th>INFORMAÇÕES</th>
              <th>CADASTRAR</th>
            </tr>
            <% monitorias.forEach(function (monitoria) { %>
            <tr>
              <th><%= monitoria.nomeDisciplina %></th>
              <th><%= monitoria.monitorNome %></th>
              <th><a href="/monitorias/informacoes/<%= monitoria._id %>" class="btn btn-info btn-block" role="button"><span class="glyphicon glyphicon-plus"></span></a></th>
              <th><a href="/cadastrarMonitoria/<%= monitoria._id %>" class="btn btn-success btn-block" role="button"><span class="glyphicon glyphicon-ok"></span></a></th>
            </tr>
            <% }); %>
            <% } %>

            <% if (perfil == 'Professor') { %>
              <th>NOME</th>
              <th>MONITOR</th>
              <th>INFORMAÇÕES</th>
            </tr>
            <% monitorias.forEach(function (monitoria) { %>
            <tr>
              <th><%= monitoria.nomeDisciplina %></th>
              <th><%= monitoria.monitorNome %></th>
              <th><a href="/monitorias/informacoes/<%= monitoria._id %>" class="btn btn-info btn-block" role="button"><span class="glyphicon glyphicon-plus"></span></a></th>
            </tr>
            <% }); %>
            <% } %>

            <% if (perfil == 'Monitor') { %>
              <th>NOME</th>
              <th>MONITOR</th>
              <th>INFORMAÇÕES</th>
            </tr>
            <% monitorias.forEach(function (monitoria) { %>
            <tr>
              <th><%= monitoria.nomeDisciplina %></th>
              <th><%= monitoria.monitorNome %></th>
              <th><a href="/monitorias/informacoes/<%= monitoria._id %>" class="btn btn-info btn-block" role="button"><span class="glyphicon glyphicon-plus"></span></a></th>
            </tr>
            <% }); %>
            <% } %>

            <% if (perfil == 'PRG') { %>
              <th>NOME</th>
              <th>MONITOR</th>
              <th>INFORMAÇÕES</th>
            </tr>
            <% monitorias.forEach(function (monitoria) { %>
            <tr>
              <th><%= monitoria.nomeDisciplina %></th>
              <th><%= monitoria.monitorNome %></th>
              <th><a href="/monitorias/informacoes/<%= monitoria._id %>" class="btn btn-info btn-block" role="button"><span class="glyphicon glyphicon-plus"></span></a></th>
            </tr>
            <% }); %>
            <% } %>

          </thead>
          <tbody>
          </tbody>
        </table>
       </div> 

     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
