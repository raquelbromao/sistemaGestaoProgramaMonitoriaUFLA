<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <% include partials/head %>
</head>
<body>
  <header>
    <% include partials/navebar %>
  </header>

  <main>
    <div class="container">

      <div class="jumbotron">
      <% if (perfil == 'Monitor') { %> 
       <p>Plano de Trabalho</p>
        <% if (possuiPlano) { %>
            <table>
                    <thead>
                      <tr>
                        <th>TITULO</th>
                        <th>DESCRIÇÃO</th>
                        <th>HORAS TOTAIS</th>
                        <th>HORAS CUMPRIDAS</th>
                        <th>PORCENTAGEM</th>
                      </tr>
                     <% atividades.forEach(function(atividade) { %> 
                      <tr>
                        <th><%= atividade.titulo %></th>
                        <th><%= atividade.observacoes %></th>  
                        <th><%= atividade.horasTotais %></th>  
                        <th><%= atividade.horasContabilizadas %></th>  
                        <th>
                          <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-info" role="progressbar" style="width: <%= atividade.porcentagem %>%" aria-valuenow="<%= atividade.porcentagem %>" aria-valuemin="0" aria-valuemax="100"></div>
                          </div>  
                        </th>  
                      </tr>
                      <% }) %>
                    </thead>
                    <tbody>
                    </tbody>
            </table>
        <% } else { %>
            Não possui Plano de Trabalho!
        <% } %>
       <% }  else { %>
        <h1>Usuário não autorizado!</h1>
       <% } %>
     </div>
      

    </div>
  </main>

  <footer>
  </footer>
</body>
</html>
