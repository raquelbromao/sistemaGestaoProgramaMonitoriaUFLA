<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <% include partials/head %>
</head>
<body>
  <header>
    <% include partials/navebar %>
  </header>

  <main>
    <div class="container">

      <div class="jumbotron">
      <% if (perfil == 'Monitor') { %> 
        <% if (possuiPlano) { %>
            <% if (possuiAtividades) { %> 
                <form class="form-inline" action="/monitoriaVigente/atividades/pesquisar" method="POST">
                        <div class="form-group">
                                <label>Ano:</label>
                                <select class="form-control" name="ano">
                                  <option value="0000">-------</option>
                                  <option value="2018">2018</option>
                                </select>
                        </div>
                        <div class="form-group">
                                <label>Mês:</label>
                                <select class="form-control" name="mes">
                                  <option value="12">-------</option>
                                  <option value="0">Janeiro</option>
                                  <option value="1">Fevereiro</option>
                                  <option value="2">Março</option>
                                  <option value="3">Abril</option>
                                  <option value="4">Maio</option>
                                  <option value="5">Junho</option>
                                  <option value="6">Julho</option>
                                  <option value="7">Agosto</option>
                                  <option value="8">Setembro</option>
                                  <option value="9">Outubro</option>
                                  <option value="10">Novembro</option>
                                  <option value="11">Dezembro</option>
                                </select>
                        </div>
                        <div class="form-group">
                          <label>Período:</label>
                          <select class="form-control" name="periodo">
                            <option value="0000-00">-------</option>
                            <option value="2018-01">2018-01</option>
                          </select>
                        </div>
                        <div class="form-group">
                                <label>Tipo:</label>
                                <select class="form-control" name="tipo">
                                    <option value="ATV00">-------</option>
                                    <option value="ATV01">Atendimento aos alunos</option>
                                    <option value="ATV02">Elaboração de material didático</option>
                                    <option value="ATV03">Correção de avaliações</option>
                                    <option value="ATV04">Monitoria em aula</option>
                                    <option value="ATV05">Outros</option>
                                </select>    
                        </div>
                    <button type="submit" class="btn btn-default btn-primary">Pesquisar</button>
                </form>
                <br>
                <a class="btn btn-raised btn-primary btn-block" href="/monitoriaVigente/atividades/registrarAtividade">Cadastrar Atividade</a>
            <% } else { %>
                Sem atividades registradas!
                <a class="btn btn-raised btn-primary btn-block" href="/monitoriaVigente/atividades/registrarAtividade">Cadastrar Atividade</a>
            <% } %>    
        <% } else { %>
            Não há Plano de Trabalho registrado ainda!
        <% } %>
       <% }  else { %>
        <h1>Usuário não autorizado!</h1>
       <% } %>
     </div>
      

    </div>
  </main>

  <footer>
  </footer>
</body>
</html>
