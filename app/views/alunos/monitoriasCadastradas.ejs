<!-- views/pages/about.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>UFLA Monitoria API</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
  </style>
</head>
<body>
  <header>
    <% include partials/navebar %>
  </header>

   <main>
     <div class="container">


       <div class="jumbotron informacoesBasicas">
        <p>Monitorias Cadastradas</p>
        <% if (monitorias.length == 0) { %>
            Sem monitorias cadastradas no momento!
        <% } else { %>    
        <table>
          <thead>
            <tr>
                <th>NOME</th>
                <th>MONITOR</th>
                <th>ORIENTADOR</th>
                <th>INFORMAÇÕES</th>
                <th>REMOVER</th>
            </tr>
            <% monitorias.forEach(function(monitoria) { %>
            <tr>
                <th><%= monitoria.nomeDisciplina %></th>
                <th><%= monitoria.monitorNome %></th>
                <th><%= monitoria.professorNome %></th>
                <th><a href="/monitoriasCadastradas/<%= monitoria._id %>" class="btn btn-info btn-block" role="button"><span class="glyphicon glyphicon-plus"></span></a></th>
                <th><a href="/removerCadastro/<%= monitoria._id %>" <a class="btn btn-danger btn-block" role="button"><span class="glyphicon glyphicon-remove"></span></a></th>
            </tr>
            <% }) %>
          </thead>
          <tbody>
          </tbody>
        </table>
        <% } %>
       </div>

       
     </div>
   </main>

  <footer>
  </footer>
</body>
</html>
